<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <Console name="DEFAULT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %c{2} - %m%n" charset="UTF-8"/>
        </Console>
    </appenders>

    <loggers>
        <root level="info">
            <AppenderRef ref="DEFAULT"/>
        </root>
    </loggers>
</configuration>